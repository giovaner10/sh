<!-- Documento_Acao -->
<script type="text/javascript">

function acao(com,grid)
{

	switch(com){
		case "Enviar":
	       	$.post("includes/incAcao.php",
	       		{
	           		acao: "ARQUIVO_ENVIAR",
	           		tipo: 1,
	           		pasta: $("#pt").val()
				},
				function(data){
					$('#conteudo').html(data);
				});
			break;

		case "Baixar":
				if($('.trSelected',grid).length>0){
			    	var items = $('.trSelected',grid);
			    	var id = items[0].cells[0].children[0].innerHTML;
			       	$.post("includes/incAcao.php",
			       		{
							acao: "ARQUIVO_BAIXAR",
							tipo: 2,
			           		id: id
						},
						function(data){
							$('#conteudo').html(data);
						});
				}				
				break;

								
	}
		
}

</script>

