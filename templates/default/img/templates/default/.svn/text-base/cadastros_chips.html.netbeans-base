  </tr>
  <tr>
    <td width="100" align="right">Número</td>
    <td><input type="text" name="numero" id="numero" value="{numero}" size="14" class="forms" /></td>
  </tr> 
  <tr>
    <td width="100" align="right">Operadora</td>
    <td><input type="text" name="operadora" id="operadora" value="{operadora}" size="15" class="forms" /></td>
  </tr> 
  <tr>
    <td width="100" align="right">MB/mês</td>
    <td><input type="text" name="mb_mes" id="mb_mes" value="{mb_mes}" size="15" class="forms" style="text-align:right" /></td>
  </tr>   
  <tr>
    <td width="100" align="right">Mensalidade</td>
    <td><input type="text" name="custo_mes" id="custo_mes" value="{custo_mes}" size="15" class="forms" style="text-align:right" /></td>
  </tr> 
  <tr>
    <td width="100" align="right">Status</td>
    <td>
    
<!-- Chips_Formulario_FIM -->   
	</td>
  </tr>     
  <tr>
    <td align="right">
    	&nbsp;
    	<input type="hidden" name="id" id="id" value="{id}" />
    </td>
    <td><button id="btEnviar" class="ui-button ui-state-default ui-corner-all">ENVIAR</button></td>
  </tr>
</table>

