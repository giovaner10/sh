                        else{
                            echo '<td>'. $for->CLIENTE_PJ_x002e_name.'</td>';
                        }                        
                        echo '<td>'; 
                        if (($for->statecode == 0) && ($for->statuscode == 1) && ($for->tz_docusign_status == 419400000)){                      
                            echo '<div > <a data-serial="'.$for->quoteid.'" class="btn btn-success gerar_pedido" role="button" id="gerar_pedido" title="Gerar Pedido"  ><i class="fa fa-cloud-upload"></i> Gerar Pedido</a></button>';
                        }
                        if (($for->statecode == 0) && ($for->statuscode == 419400002) && ($for->tz_docusign_status == 419400000)){
                            echo '<div > <a data-docsign="'.$for->quoteid.'" class="btn btn-info enviar_docsign"  role="button" id="enviar_docsign" style="margin-top: 4px;" title="Solicitar assinatura" ><i class="fa fa-pencil"></i> Solicitar Assinatura</a></button>';
                        } 
                                               

                          if (($for->statecode == 2) && ($for->statuscode == 4)){
                            echo '<div > <a data-status="'.$for->quoteid.'" class="btn btn-warning solicitar_statusclie"  role="button" id="solicitar_statusclie" style="margin-top: 4px;" title="Solicitar status" ><i class="fa fa-file"></i> Status</a></button>';
