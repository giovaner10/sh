        <?php
                if (!empty($oportunidadeCliente)) {
                    foreach ($oportunidadeCliente as $for ) {
                        echo '<tr>';  
                        
                        if ($for->quotenumber != null) {
                            echo '<td>'. $for->quotenumber.'</td>';
                        } else{
                            echo '<td>  </td>';
                        } 
                        if ($for->createdon) {
                            echo '<td >'. dh_for_humans(substr($for->createdon, 0, 10)).'</td>';
                        } else{
                            echo '<td>  </td>';
                        } 
                        if (!empty($for->statuscode))
                        {
                            echo '<td>';                           
                            if($for->statecode == 0){
                                if($for->statuscode == 1){
                                    if($for->tz_docusign_status == 419400000){
                                        echo "Em Andamento";
                                    }
                                }
                                if($for->statuscode == 419400002){
                                    if($for->tz_docusign_status == 419400000){
                                        echo "Pedido Gerado";
                                    }
                                    if($for->tz_docusign_status == 419400001){
                                        echo "Aguardando Assinatura";
                                    }
                                    if($for->tz_docusign_status == 419400002){
                                        echo "Proposta Assinada";
                                    }
                                }                                
                            }
                            if ($for->statecode == 0) {
                                if($for->statuscode == 419400001){
                                    if($for->tz_docusign_status == 419400002){
                                        echo "Em Validação ADV";
                                    }
                                }
                            }
                            if ($for->statecode == 2) {
                                if($for->statuscode == 4){
                                    echo "Ganha";
                                }
                            }
                            if ($for->statecode == 3) {
                                if($for->statuscode == 5){
                                    echo "Perdida";
                                }
                            } 
                            echo '</td>';
                        } else{echo '<td>   </td>';}                       
                        if ($for->tz_valor_total_licenca) {
                            echo '<td> R$ '. number_format($for->tz_valor_total_licenca,2,",",".").'</td>';
                        } else{
                            echo '<td>  </td>';
                        }                    
                        if ($for->tz_valor_total_hardware) {
                            echo '<td> R$ '. number_format($for->tz_valor_total_hardware,2,",",".").'</td>';
                        } else{
                            echo '<td>  </td>';
                        } 
                        if (!empty($for->effectivefrom)) {
                            echo '<td>'. dh_for_humans(substr($for->effectivefrom, 0, 10)).'</td>';
                        } else{
                            echo '<td>  </td>';
                        }                       
                        if (!empty($for->effectiveto)) {
                            echo '<td>'. dh_for_humans(substr($for->effectiveto, 0, 10)).'</td>';
